#include <stdio.h>
#include <stdlib.h>

typedef union Genero{
    int masculino;
    int feminino;
}genero;

typedef struct Pessoa{
    char nome[50];
    int idade;
    genero G;
}pessoa;

void Dados(pessoa * p){
    printf("Informe o nome: \t");
    scanf("%[^\n]", p->nome);
    printf("Informe a idade: \t");
    scanf("%d", p->idade);
    printf("Informe o genero: \t");
    scanf("%d", p->G);
}
